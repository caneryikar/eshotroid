<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/main_imageView_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/eshot_banner" />
    
    <LinearLayout
        android:id="@+id/main_linearLayout_types"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:weightSum="3" >

        <Button
            android:id="@+id/main_button_weekDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="@string/weekDay" />

        <Button
            android:id="@+id/main_button_saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="@string/saturday" />

        <Button
            android:id="@+id/main_button_sunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="@string/sunday" />

    </LinearLayout>
    
    <TextView
        android:id="@+id/main_textView_selectedLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_imageView_banner"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_margin="5dp"
        android:text="@string/selectedLine"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <ListView
        android:id="@+id/main_listView_busLines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_linearLayout_types"
        android:layout_below="@+id/main_textView_selectedLine"
        android:layout_margin="5dp" >

    </ListView>

</RelativeLayout>